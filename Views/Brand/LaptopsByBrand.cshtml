@model IEnumerable<IGrouping<Brand, Laptop>>

@foreach (IGrouping<Brand, Laptop> pair in Model)
{

    <h1> @pair.Key.Name</h1>
    <div class="container">
        <table class="table">
            <tdead>
                <tr>
                    <th scope="col">Brand</th>
                    <th scope="col">Model</th>
                    <th scope="col">Price</th>
                    <th scope="col">Year</th>
                    <th scope="col">Id</th>
                </tr>
            </tdead>

        @foreach (var laptop in pair)
        {
            <tbody>
                <tr>
                    <td>@laptop.Brand.Name</td>
                    <td>@laptop.Model</td>
                    <td>@laptop.Price</td>
                    <td>@laptop.Year</td>
                    <td>@laptop.Id</td>
                </tr>
            </tbody>

        }
        </table>
        </div>
        }
