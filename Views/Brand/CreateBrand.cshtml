@model FinalProject.Models.ViewModels.CreateBrandViewModel

<form method="post">
    <h1>Create A new Brand</h1>
    <div class="row mt-4">
        <div class="col-md-8">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" required/>
        </div>
        <div class="col-md-4 mt-4">
            <input type="submit" class="btn btn-primary mt-2 mb-4 w" />
        </div>
    </div>
</form>

@if(!String.IsNullOrEmpty(Model.Name)){
    <h1> Brand Named @Model.Name created </h1>
}