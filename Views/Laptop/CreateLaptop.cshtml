@model FinalProject.Models.ViewModels.CreateLaptopViewModel;

<form method="post" class="mb-4">
    <div class="row mt-4">
        <div class="col-md-6">
            <label asp-for="Model" class="form-label"></label>
            <input asp-for="Model" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="BrandChoice"></label>
            @Html.DropDownListFor(x => Model.BrandChoice, new SelectList(Model.Brands, "Id", "Name"), new { @class = "form-select mt-1" })
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" class="form-control" />
        </div>

    </div>

    <input type="submit" class="btn btn-primary mt-4" />

</form>
